<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemCourse"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/icon_tienganhcoban" />

            <TextView
                android:id="@+id/itemtxtTitle"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/itemImage"
                android:layout_toRightOf="@+id/itemImage"
                android:gravity="center_vertical"
                android:text="Tiếng anh cơ bản"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemtxtTotalWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemtxtTitle"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/itemImage"
                android:layout_toRightOf="@+id/itemImage"
                android:text="921 từ" />

            <TextView
                android:id="@+id/itemtxtIntroduction"
                android:layout_width="247dp"
                android:layout_height="19dp"
                android:layout_below="@+id/itemtxtTotalWord"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@+id/itemImage"
                android:layout_toRightOf="@+id/itemImage"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Tiếng anh cơ bản bao gồm 14 chủ đề và 2023 từ" />

            <ImageButton
                android:id="@+id/btnDownloadCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:background="@color/white" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>